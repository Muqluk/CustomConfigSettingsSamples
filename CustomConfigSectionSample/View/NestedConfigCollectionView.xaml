<UserControl x:Class="CustomConfigSectionSample.View.NestedConfigCollectionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{ Binding Source={ StaticResource Locator }, Path=NestedConfigSample }">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="1" Content="Feature Teams"/>
        <ComboBox Grid.Column="2" 
                  Grid.ColumnSpan="2" 
                  Grid.Row="1" 
                  Width="200" 
                  ItemsSource="{ Binding FeatureTeams, UpdateSourceTrigger = PropertyChanged, Mode=OneWayToSource}" 
                  DisplayMemberPath="{Binding FeatureTeamName}" />
    </Grid>
</UserControl>
